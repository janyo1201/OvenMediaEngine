    "version": "0.2.0",
    "configurations": [
        {
            "name": "launch debug OvenMediaEngine (macOS)",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/src/bin/DEBUG/OvenMediaEngine",
            "args": [],
            "cwd": "${workspaceFolder}/src/bin/DEBUG",
            "env": 
            {
                "DYLD_FALLBACK_LIBRARY_PATH": "${workspaceFolder}/build/prerequisites/lib"
            },
            "preLaunchTask": "make debug (macOS)"
        },
        {
            "name": "launch debug OvenMediaEngine (Linux)",
            "type": "gdb",
            "request": "launch",
            "target": "${workspaceFolder}/src/bin/DEBUG/OvenMediaEngine",
            "cwd": "${workspaceFolder}/src/bin/DEBUG",
            "preLaunchTask": "make debug (Linux)"
        },
        {
            "name": "launch release OvenMediaEngine (macOS)",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/src/bin/RELEASE/OvenMediaEngine",
            "args": [],
            "cwd": "${workspaceFolder}/src/bin/RELEASE",
            "env": 
            {
                "DYLD_FALLBACK_LIBRARY_PATH": "${workspaceFolder}/build/prerequisites/lib"
            },
            "preLaunchTask": "make release (macOS)"
        }
    ]
}