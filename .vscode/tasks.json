{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "make debug (macOS)",
            "type": "shell",
            "command": "make -f Makefile && ${workspaceFolder}/misc/macos_fix_dylib_paths.sh ${workspaceFolder}/src/bin/DEBUG/OvenMediaEngine",
            "options": {
                "cwd": "${workspaceFolder}/src",
                "env": {
                    "PKG_CONFIG_PATH": "${workspaceFolder}/build/prerequisites/lib/pkgconfig",
                    "ARCH": "-arch x86_64",
                    "PREFIX": "${workspaceFolder}/build/prerequisites/lib"
                }
            },
            "group": "build",
            "problemMatcher":"$gcc"
        },
        {
            "label": "make release (macOS)",
            "type": "shell",
            "command": "make -f Makefile release && ${workspaceFolder}/misc/macos_fix_dylib_paths.sh ${workspaceFolder}/src/bin/RELEASE/OvenMediaEngine",
            "options": {
                "cwd": "${workspaceFolder}/src",
                "env": {
                    "PKG_CONFIG_PATH": "${workspaceFolder}/build/prerequisites/lib/pkgconfig",
                    "ARCH": "-arch x86_64",
                    "PREFIX": "${workspaceFolder}/build/prerequisites/lib"
                }
            },
            "group": "build",
            "problemMatcher":"$gcc"
        },
        {
            "label": "obtain prerequisites",
            "type": "shell",
            "command": "${workspaceFolder}/misc/prerequisites.sh",
            "options": {
                "env": {
                    "WORKDIR":  "${workspaceFolder}/build",
                    "CACHED_BUILD": "1"
                }
            },
            "problemMatcher": []
        }
    ]
}